@page "/Delete"
@model ContosoCrafts.WebSite.Pages.DeleteModel

<!-- Main container for the Delete Product page -->
<div class="card">
    <div class="card-body">
        <h2>Delete Product</h2>

        <!-- Check if the selected product exists before displaying its details -->
        @if (Model.SelectedProduct != null)
        {
            <div>
                <h4>Are you sure you want to delete this product?</h4>

                <!-- Displaying details of the selected product -->
                <div>
                    <strong>Id:</strong> @Model.SelectedProduct.Id <br />
                    <strong>Title:</strong> @Model.SelectedProduct.Title <br />
                    <strong>Description:</strong> @Model.SelectedProduct.Description <br />
                    <strong>Image:</strong> @Model.SelectedProduct.Image <br />
                    <strong>Category:</strong> @Model.SelectedProduct.Category <br />
                    <strong>Size:</strong> @Model.SelectedProduct.Size <br />
                    <strong>Color:</strong> @Model.SelectedProduct.Color <br />
                    <strong>Material:</strong> @string.Join(", ", Model.SelectedProduct.Material) <br />
                    <strong>Style:</strong> @string.Join(", ", Model.SelectedProduct.Style) <br />
                </div>
            </div>

            <!-- Form for submitting the delete request -->
            <form method="post">
                <!-- Hidden input to store the product ID being deleted -->
                <input type="hidden" asp-for="SelectedProduct.Id" />

                <!-- Delete button to confirm the deletion action -->
                <button type="submit" class="btn btn-danger">Delete</button>

                <!-- Cancel button to go back to the Index page without deleting -->
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </form>
        }
        else
        {
            <!-- Display a message if the product was not found -->
            <div>
                <h4>Product not found.</h4>
            </div>
        }
    </div>
</div>
