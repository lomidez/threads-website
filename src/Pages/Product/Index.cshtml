@page
@model ContosoCrafts.WebSite.Pages.Product.IndexModel
@{
    ViewData["Title"] = "Index page";
}
<h1> Welcome to Threads !!</h1>
<!-- Notification Message Display -->
@if (TempData["Notification"] != null)
{
    <script>
        alert('@TempData["Notification"]'); // Show pop-up with the notification message
    </script>
}
<!-- Button to navigate to Create Product page -->
<div style="margin-bottom: 20px;">
    <a href="/Create" class="btn btn-primary">Create New Product</a>
</div>

<div class="container">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Action</th>
                <th>Action</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Title</td>
                    <td><a asp-page="Read" asp-route-id="@product.Id">Read</a></td>
                    <td><a asp-page="Update" asp-route-id="@product.Id">Update</a></td>
                    <td><a asp-page="Delete" asp-route-id="@product.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>