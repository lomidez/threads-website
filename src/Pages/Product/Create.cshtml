@page "/Create/{id}"
@model ContosoCrafts.WebSite.Pages.CreateModel
@{
    ViewData["Title"] = "Create Product";
}

@if (Model.NewProduct != null)
{
    <div class="card mt-5">
        <div class="card-body" style="text-align: center">
            <h2>Create Product</h2>
            <form method="post">
                <input type="hidden" asp-for="NewProduct.Id" />

                <div class="form-group">
                    <label asp-for="NewProduct.Title" class="control-label"></label>
                    <input asp-for="NewProduct.Title" class="form-control" placeholder="Enter product title" />
                    <span asp-validation-for="NewProduct.Title" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="NewProduct.Description" class="control-label"></label>
                    <textarea asp-for="NewProduct.Description" class="form-control" placeholder="Enter product description"></textarea>
                    <span asp-validation-for="NewProduct.Description" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="NewProduct.Price" class="control-label"></label>
                    <input asp-for="NewProduct.Price" class="form-control" placeholder="Enter product price" />
                    <span asp-validation-for="NewProduct.Price" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="NewProduct.Category" class="control-label"></label>
                    <select asp-for="NewProduct.Category" class="form-control">
                        <option value="">Select a category</option>
                        <option>Electronics</option>
                        <option>Clothing</option>
                        <option>Home & Garden</option>
                        <option>Sports</option>
                        <!-- Add other categories as needed -->
                    </select>
                    <span asp-validation-for="NewProduct.Category" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mt-4">Create</button>
                <a asp-page="./Index" class="btn btn-secondary mt-4">Cancel</a>
            </form>
        </div>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
